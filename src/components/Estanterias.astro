// Estanterias.astro - Componente para gestionar cocios en estanter√≠as
---

<div class="estanterias-container">
  <div class="header-container">
    <h2>Gesti√≥n de Estanter√≠as</h2>
    <button type="button" id="btnNuevaEstanteria" class="btn-nueva-estanteria">+ Nueva Estanter√≠a</button>
  </div>
  
  <!-- Panel de Filtros -->
  <div class="filtros-panel">
    <div class="filtros-grid">
      <div class="filtro-item">
        <label for="filtroProveedor">Proveedor:</label>
        <input type="text" id="filtroProveedor" placeholder="Buscar por proveedor..." />
      </div>
      
      <div class="filtro-item">
        <label for="filtroReferencia">Referencia:</label>
        <input type="text" id="filtroReferencia" placeholder="Buscar por referencia..." />
      </div>
      
      <div class="filtro-item">
        <label for="filtroCantidadMin">Cantidad m√≠nima (Kg):</label>
        <input type="number" id="filtroCantidadMin" min="0" placeholder="Ej: 300" />
      </div>
      
      <div class="filtro-item">
        <label for="filtroCantidadMax">Cantidad m√°xima (Kg):</label>
        <input type="number" id="filtroCantidadMax" min="0" placeholder="Ej: 1000" />
      </div>
    </div>
    
    <div class="filtros-acciones">
      <button type="button" id="btnAplicarFiltros" class="btn-aplicar">Buscar</button>
      <button type="button" id="btnLimpiarFiltros" class="btn-limpiar">Limpiar</button>
    </div>
  </div>
  
  <!-- Contenedor din√°mico para estanter√≠as -->
  <div id="estanteriasContainer"></div>
</div>

<!-- Modal para a√±adir/editar cocio -->
<div id="cocioModal" class="modal">
  <div class="modal-content">
    <span class="close" data-modal="cocio">&times;</span>
    <h3 id="modalTitle">A√±adir Cocio</h3>
    <form id="cocioForm">
      <div class="form-group">
        <label for="proveedor">Proveedor:</label>
        <div class="proveedor-input-wrapper">
          <input 
            type="text" 
            id="proveedor" 
            list="proveedoresList" 
            placeholder="Escribe o selecciona un proveedor"
            required 
          />
          <button type="button" id="btnAgregarProveedor" class="btn-add-proveedor" title="Agregar nuevo proveedor">
            +
          </button>
        </div>
        <datalist id="proveedoresList"></datalist>
        <div id="proveedorStatus" class="proveedor-status"></div>
      </div>
      
      <div class="form-group">
        <label for="referencia">Referencia del Material:</label>
        <input type="text" id="referencia" required />
      </div>
      
      <div class="form-group">
        <label for="cantidad">Cantidad (Kg):</label>
        <input type="number" id="cantidad" min="0" step="1" required />
      </div>
      
      <div class="form-group">
        <label for="fecha">Fecha:</label>
        <input type="date" id="fecha" required />
      </div>
      
      <div class="form-buttons">
        <button type="submit" class="btn-guardar">Guardar</button>
        <button type="button" class="btn-eliminar" id="btnEliminar">Eliminar</button>
        <button type="button" class="btn-cancelar" id="btnCancelar">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal para crear/editar estanter√≠a -->
<div id="estanteriaModal" class="modal">
  <div class="modal-content">
    <span class="close" data-modal="estanteria">&times;</span>
    <h3 id="estanteriaModalTitle">Nueva Estanter√≠a</h3>
    <form id="estanteriaForm">
      <div class="form-group">
        <label for="nombreEstanteria">Nombre de la Estanter√≠a:</label>
        <input type="text" id="nombreEstanteria" placeholder="Ej: Almac√©n Principal" required />
      </div>
      
      <div class="form-group">
        <label for="filasEstanteria">N√∫mero de Filas:</label>
        <input type="number" id="filasEstanteria" min="1" max="10" value="4" required />
      </div>
      
      <div class="form-group">
        <label for="columnasEstanteria">N√∫mero de Columnas:</label>
        <input type="number" id="columnasEstanteria" min="1" max="12" value="8" required />
      </div>
      
      <div class="form-buttons">
        <button type="submit" class="btn-guardar">Crear Estanter√≠a</button>
        <button type="button" class="btn-eliminar-estanteria" id="btnEliminarEstanteria" style="display:none;">Eliminar Estanter√≠a</button>
        <button type="button" class="btn-cancelar" id="btnCancelarEstanteria">Cancelar</button>
      </div>
    </form>
  </div>
</div>

