// Hornos.astro - Componente para gestionar hornos cerÃ¡micos
---

<div class="hornos-container">
  <div class="header-container">
    <h2>GestiÃ³n de Hornos CerÃ¡micos</h2>
    <button type="button" id="btnNuevoHorno" class="btn-nuevo-horno">+ Nuevo Horno</button>
  </div>
  
  <!-- Contenedor dinÃ¡mico para hornos -->
  <div id="hornosContainer" class="hornos-grid"></div>
</div>

<!-- Modal para aÃ±adir/editar horno -->
<div id="hornoModal" class="modal">
  <div class="modal-content">
    <span class="close" data-modal="horno">&times;</span>
    <h3 id="hornoModalTitle">AÃ±adir Horno</h3>
    <form id="hornoForm">
      <div class="form-group">
        <label for="nombreHorno">Nombre del Horno:</label>
        <input type="text" id="nombreHorno" placeholder="Ej: Horno Principal" required />
      </div>
      
      <div class="form-group">
        <label for="temperatura">Temperatura (Â°C):</label>
        <input type="number" id="temperatura" min="0" step="1" placeholder="Ej: 1200" required />
      </div>
      
      <div class="form-group">
        <label for="velocidad">Velocidad del Horno:</label>
        <input type="number" id="velocidad" min="0" step="0.1" placeholder="Ej: 2.5" required />
      </div>
      
      <div class="form-buttons">
        <button type="submit" class="btn-guardar">Guardar</button>
        <button type="button" class="btn-eliminar" id="btnEliminarHorno">Eliminar</button>
        <button type="button" class="btn-cancelar" id="btnCancelarHorno">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<style>
  .hornos-container {
    padding: 30px;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40px;
    padding: 20px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .header-container h2 {
    color: #1a202c;
    font-size: 32px;
    margin: 0;
    font-weight: 800;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .btn-nuevo-horno {
    background: linear-gradient(135deg, #e74c3c 0%, #e67e22 100%);
    color: white;
    border: none;
    padding: 14px 28px;
    border-radius: 12px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
    letter-spacing: 0.5px;
  }

  .btn-nuevo-horno:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(231, 76, 60, 0.4);
  }

  .btn-nuevo-horno:active {
    transform: translateY(-1px);
  }

  .hornos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
    margin-top: 20px;
  }

  .horno-card {
    background: white;
    border-radius: 20px;
    padding: 28px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
  }

  .horno-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
  }

  .horno-card:hover {
    box-shadow: 0 12px 40px rgba(231, 76, 60, 0.2);
    transform: translateY(-8px) scale(1.02);
    border-color: #e74c3c;
  }

  .horno-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 3px solid #f8f9fa;
  }

  .horno-nombre {
    font-size: 22px;
    font-weight: 800;
    color: #1a202c;
    margin: 0;
    letter-spacing: 0.3px;
  }

  .btn-editar-horno {
    background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(52, 152, 219, 0.3);
  }

  .btn-editar-horno:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(52, 152, 219, 0.4);
  }

  .horno-info {
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .horno-dato {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .horno-dato:hover {
    background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
    transform: translateX(5px);
  }

  .horno-label {
    font-weight: 700;
    color: #6c757d;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .horno-label::before {
    content: 'â€¢';
    font-size: 20px;
    color: #e74c3c;
  }

  .horno-valor {
    font-size: 24px;
    font-weight: 900;
    color: #2c3e50;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
  }

  .temperatura-valor {
    color: #e74c3c;
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .velocidad-valor {
    color: #f39c12;
    background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    animation: fadeIn 0.3s ease;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .modal-content {
    background: white;
    margin: 5% auto;
    padding: 40px;
    border: none;
    border-radius: 24px;
    width: 90%;
    max-width: 550px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideDown 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-50px) scale(0.9);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .close {
    color: #95a5a6;
    float: right;
    font-size: 32px;
    font-weight: bold;
    cursor: pointer;
    line-height: 20px;
    transition: all 0.3s ease;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .close:hover {
    color: #e74c3c;
    background: #fee;
    transform: rotate(90deg);
  }

  .modal-content h3 {
    margin-top: 0;
    color: #1a202c;
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 30px;
    background: linear-gradient(135deg, #e74c3c 0%, #f39c12 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .form-group {
    margin-bottom: 24px;
  }

  .form-group label {
    display: block;
    margin-bottom: 10px;
    font-weight: 700;
    color: #2c3e50;
    font-size: 15px;
    letter-spacing: 0.3px;
  }

  .form-group input {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    font-size: 16px;
    box-sizing: border-box;
    transition: all 0.3s ease;
    background: #f8f9fa;
  }

  .form-group input:focus {
    outline: none;
    border-color: #e74c3c;
    box-shadow: 0 0 0 4px rgba(231, 76, 60, 0.1);
    background: white;
    transform: translateY(-2px);
  }

  .form-buttons {
    display: flex;
    gap: 12px;
    margin-top: 32px;
  }

  .form-buttons button {
    flex: 1;
    padding: 14px 20px;
    border: none;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 0.5px;
  }

  .btn-guardar {
    background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
  }

  .btn-guardar:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(39, 174, 96, 0.4);
  }

  .btn-eliminar {
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    color: white;
    display: none;
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
  }

  .btn-eliminar:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
  }

  .btn-eliminar.show {
    display: block;
  }

  .btn-cancelar {
    background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(149, 165, 166, 0.3);
  }

  .btn-cancelar:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(149, 165, 166, 0.4);
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    color: #7f8c8d;
    background: white;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .empty-state-icon {
    font-size: 80px;
    margin-bottom: 24px;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .empty-state-text {
    font-size: 22px;
    margin-bottom: 12px;
    font-weight: 700;
    color: #2c3e50;
  }

  .empty-state-subtext {
    font-size: 16px;
    color: #95a5a6;
  }
</style>

<script>
  // Estado de la aplicaciÃ³n
  let hornos: any[] = [];
  let hornoEditando: any = null;

  // Elementos del DOM
  const hornosContainer = document.getElementById('hornosContainer');
  const hornoModal = document.getElementById('hornoModal');
  const hornoForm = document.getElementById('hornoForm') as HTMLFormElement;
  const btnNuevoHorno = document.getElementById('btnNuevoHorno');
  const btnCancelarHorno = document.getElementById('btnCancelarHorno');
  const btnEliminarHorno = document.getElementById('btnEliminarHorno');
  const hornoModalTitle = document.getElementById('hornoModalTitle');
  
  // Inputs del formulario
  const nombreHornoInput = document.getElementById('nombreHorno') as HTMLInputElement;
  const temperaturaInput = document.getElementById('temperatura') as HTMLInputElement;
  const velocidadInput = document.getElementById('velocidad') as HTMLInputElement;

  // Cargar hornos al inicio
  cargarHornos();

  // Event Listeners
  btnNuevoHorno?.addEventListener('click', abrirModalNuevoHorno);
  btnCancelarHorno?.addEventListener('click', cerrarModal);
  hornoForm?.addEventListener('submit', guardarHorno);
  btnEliminarHorno?.addEventListener('click', eliminarHorno);

  // Cerrar modal al hacer clic en la X
  document.querySelectorAll('.close').forEach(closeBtn => {
    closeBtn.addEventListener('click', cerrarModal);
  });

  // Cerrar modal al hacer clic fuera
  window.addEventListener('click', (event) => {
    if (event.target === hornoModal) {
      cerrarModal();
    }
  });

  // Funciones principales
  async function cargarHornos() {
    try {
      const response = await fetch('/api/hornos');
      if (!response.ok) throw new Error('Error al cargar hornos');
      
      hornos = await response.json();
      renderizarHornos();
    } catch (error) {
      console.error('Error:', error);
      alert('Error al cargar los hornos');
    }
  }

  function renderizarHornos() {
    if (!hornosContainer) return;

    if (hornos.length === 0) {
      hornosContainer.innerHTML = `
        <div class="empty-state">
          <div class="empty-state-icon">ðŸ”¥</div>
          <div class="empty-state-text">No hay hornos registrados</div>
          <div class="empty-state-subtext">Haz clic en "Nuevo Horno" para agregar uno</div>
        </div>
      `;
      return;
    }

    hornosContainer.innerHTML = hornos.map(horno => `
      <div class="horno-card">
        <div class="horno-header">
          <h3 class="horno-nombre">${horno.nombre}</h3>
          <button class="btn-editar-horno" data-id="${horno._id}">Editar</button>
        </div>
        <div class="horno-info">
          <div class="horno-dato">
            <span class="horno-label">Temperatura:</span>
            <span class="horno-valor temperatura-valor">${horno.temperatura}Â°C</span>
          </div>
          <div class="horno-dato">
            <span class="horno-label">Velocidad:</span>
            <span class="horno-valor velocidad-valor">${horno.velocidad}</span>
          </div>
        </div>
      </div>
    `).join('');

    // AÃ±adir event listeners a botones de editar
    document.querySelectorAll('.btn-editar-horno').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-id');
        const horno = hornos.find(h => h._id === id);
        if (horno) abrirModalEditarHorno(horno);
      });
    });
  }

  function abrirModalNuevoHorno() {
    hornoEditando = null;
    hornoForm?.reset();
    if (hornoModalTitle) hornoModalTitle.textContent = 'AÃ±adir Horno';
    btnEliminarHorno?.classList.remove('show');
    if (hornoModal) hornoModal.style.display = 'block';
  }

  function abrirModalEditarHorno(horno: any) {
    hornoEditando = horno;
    if (nombreHornoInput) nombreHornoInput.value = horno.nombre;
    if (temperaturaInput) temperaturaInput.value = horno.temperatura;
    if (velocidadInput) velocidadInput.value = horno.velocidad;
    if (hornoModalTitle) hornoModalTitle.textContent = 'Editar Horno';
    btnEliminarHorno?.classList.add('show');
    if (hornoModal) hornoModal.style.display = 'block';
  }

  function cerrarModal() {
    if (hornoModal) hornoModal.style.display = 'none';
    hornoEditando = null;
    hornoForm?.reset();
  }

  async function guardarHorno(e: Event) {
    e.preventDefault();

    const hornoData = {
      nombre: nombreHornoInput?.value,
      temperatura: parseFloat(temperaturaInput?.value || '0'),
      velocidad: parseFloat(velocidadInput?.value || '0'),
    };

    try {
      let response;
      if (hornoEditando) {
        // Actualizar horno existente
        response = await fetch(`/api/hornos/${hornoEditando._id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(hornoData),
        });
      } else {
        // Crear nuevo horno
        response = await fetch('/api/hornos', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(hornoData),
        });
      }

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Error al guardar el horno');
      }

      await cargarHornos();
      cerrarModal();
      alert(hornoEditando ? 'Horno actualizado correctamente' : 'Horno creado correctamente');
    } catch (error: any) {
      console.error('Error:', error);
      alert(error.message || 'Error al guardar el horno');
    }
  }

  async function eliminarHorno() {
    if (!hornoEditando) return;

    if (!confirm(`Â¿EstÃ¡s seguro de que quieres eliminar el horno "${hornoEditando.nombre}"?`)) {
      return;
    }

    try {
      const response = await fetch(`/api/hornos/${hornoEditando._id}`, {
        method: 'DELETE',
      });

      if (!response.ok) {
        throw new Error('Error al eliminar el horno');
      }

      await cargarHornos();
      cerrarModal();
      alert('Horno eliminado correctamente');
    } catch (error) {
      console.error('Error:', error);
      alert('Error al eliminar el horno');
    }
  }
</script>
