---
// Hornos.astro - Componente para gestionar hornos cer치micos
---

<div class="hornos-container">
  <div class="header-container">
    <h2>Gesti칩n de Hornos Cer치micos</h2>
    <button type="button" id="btnNuevoHorno" class="btn-nuevo-horno">+ Nuevo Horno</button>
  </div>
  
  <!-- Contenedor din치mico para hornos -->
  <div id="hornosContainer" class="hornos-grid"></div>
</div>

<!-- Modal para a침adir/editar horno -->
<div id="hornoModal" class="modal">
  <div class="modal-content">
    <span class="close" data-modal="horno">&times;</span>
    <h3 id="hornoModalTitle">A침adir Horno</h3>
    <form id="hornoForm">
      <div class="form-group">
        <label for="nombreHorno">Nombre del Horno:</label>
        <input type="text" id="nombreHorno" placeholder="Ej: Horno Principal" required />
      </div>
      
      <div class="form-group">
        <label for="temperatura">Temperatura (춿C):</label>
        <input type="number" id="temperatura" min="0" step="1" placeholder="Ej: 1200" required />
      </div>
      
      <div class="form-group">
        <label for="velocidad">Velocidad del Horno:</label>
        <input type="number" id="velocidad" min="0" step="0.1" placeholder="Ej: 2.5" required />
      </div>
      
      <div class="form-buttons">
        <button type="submit" class="btn-guardar">Guardar</button>
        <button type="button" class="btn-eliminar" id="btnEliminarHorno">Eliminar</button>
        <button type="button" class="btn-cancelar" id="btnCancelarHorno">Cancelar</button>
      </div>
    </form>
  </div>
</div>

<style>
  .hornos-container {
    padding: 20px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .header-container h2 {
    color: #2c3e50;
    font-size: 28px;
    margin: 0;
  }

  .btn-nuevo-horno {
    background-color: #27ae60;
    color: white;
    border: none;
    padding: 12px 24px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .btn-nuevo-horno:hover {
    background-color: #229954;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .hornos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .horno-card {
    background: white;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 2px solid #e0e0e0;
  }

  .horno-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    transform: translateY(-4px);
  }

  .horno-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 2px solid #3498db;
  }

  .horno-nombre {
    font-size: 20px;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
  }

  .btn-editar-horno {
    background-color: #3498db;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .btn-editar-horno:hover {
    background-color: #2980b9;
  }

  .horno-info {
    margin-top: 15px;
  }

  .horno-dato {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px solid #ecf0f1;
  }

  .horno-dato:last-child {
    border-bottom: none;
  }

  .horno-label {
    font-weight: 600;
    color: #7f8c8d;
    font-size: 14px;
  }

  .horno-valor {
    font-size: 18px;
    font-weight: 700;
    color: #2c3e50;
  }

  .temperatura-valor {
    color: #e74c3c;
  }

  .velocidad-valor {
    color: #f39c12;
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 5% auto;
    padding: 30px;
    border: 1px solid #888;
    border-radius: 8px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    line-height: 20px;
  }

  .close:hover,
  .close:focus {
    color: #000;
  }

  .modal-content h3 {
    margin-top: 0;
    color: #2c3e50;
    font-size: 24px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #34495e;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
    box-sizing: border-box;
  }

  .form-group input:focus {
    outline: none;
    border-color: #3498db;
    box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
  }

  .form-buttons {
    display: flex;
    gap: 10px;
    margin-top: 25px;
  }

  .form-buttons button {
    flex: 1;
    padding: 12px;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-guardar {
    background-color: #27ae60;
    color: white;
  }

  .btn-guardar:hover {
    background-color: #229954;
  }

  .btn-eliminar {
    background-color: #e74c3c;
    color: white;
    display: none;
  }

  .btn-eliminar:hover {
    background-color: #c0392b;
  }

  .btn-eliminar.show {
    display: block;
  }

  .btn-cancelar {
    background-color: #95a5a6;
    color: white;
  }

  .btn-cancelar:hover {
    background-color: #7f8c8d;
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: #7f8c8d;
  }

  .empty-state-icon {
    font-size: 64px;
    margin-bottom: 20px;
  }

  .empty-state-text {
    font-size: 18px;
    margin-bottom: 10px;
  }

  .empty-state-subtext {
    font-size: 14px;
    color: #95a5a6;
  }
</style>

<script>
  // Estado de la aplicaci칩n
  let hornos: any[] = [];
  let hornoEditando: any = null;

  // Elementos del DOM
  const hornosContainer = document.getElementById('hornosContainer');
  const hornoModal = document.getElementById('hornoModal');
  const hornoForm = document.getElementById('hornoForm') as HTMLFormElement;
  const btnNuevoHorno = document.getElementById('btnNuevoHorno');
  const btnCancelarHorno = document.getElementById('btnCancelarHorno');
  const btnEliminarHorno = document.getElementById('btnEliminarHorno');
  const hornoModalTitle = document.getElementById('hornoModalTitle');
  
  // Inputs del formulario
  const nombreHornoInput = document.getElementById('nombreHorno') as HTMLInputElement;
  const temperaturaInput = document.getElementById('temperatura') as HTMLInputElement;
  const velocidadInput = document.getElementById('velocidad') as HTMLInputElement;

  // Cargar hornos al inicio
  cargarHornos();

  // Event Listeners
  btnNuevoHorno?.addEventListener('click', abrirModalNuevoHorno);
  btnCancelarHorno?.addEventListener('click', cerrarModal);
  hornoForm?.addEventListener('submit', guardarHorno);
  btnEliminarHorno?.addEventListener('click', eliminarHorno);

  // Cerrar modal al hacer clic en la X
  document.querySelectorAll('.close').forEach(closeBtn => {
    closeBtn.addEventListener('click', cerrarModal);
  });

  // Cerrar modal al hacer clic fuera
  window.addEventListener('click', (event) => {
    if (event.target === hornoModal) {
      cerrarModal();
    }
  });

  // Funciones principales
  async function cargarHornos() {
    try {
      const response = await fetch('/api/hornos');
      if (!response.ok) throw new Error('Error al cargar hornos');
      
      hornos = await response.json();
      renderizarHornos();
    } catch (error) {
      console.error('Error:', error);
      alert('Error al cargar los hornos');
    }
  }

  function renderizarHornos() {
    if (!hornosContainer) return;

    if (hornos.length === 0) {
      hornosContainer.innerHTML = `
        <div class="empty-state">
          <div class="empty-state-icon">游댠</div>
          <div class="empty-state-text">No hay hornos registrados</div>
          <div class="empty-state-subtext">Haz clic en "Nuevo Horno" para agregar uno</div>
        </div>
      `;
      return;
    }

    hornosContainer.innerHTML = hornos.map(horno => `
      <div class="horno-card">
        <div class="horno-header">
          <h3 class="horno-nombre">${horno.nombre}</h3>
          <button class="btn-editar-horno" data-id="${horno._id}">Editar</button>
        </div>
        <div class="horno-info">
          <div class="horno-dato">
            <span class="horno-label">Temperatura:</span>
            <span class="horno-valor temperatura-valor">${horno.temperatura}춿C</span>
          </div>
          <div class="horno-dato">
            <span class="horno-label">Velocidad:</span>
            <span class="horno-valor velocidad-valor">${horno.velocidad}</span>
          </div>
        </div>
      </div>
    `).join('');

    // A침adir event listeners a botones de editar
    document.querySelectorAll('.btn-editar-horno').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = (e.target as HTMLElement).getAttribute('data-id');
        const horno = hornos.find(h => h._id === id);
        if (horno) abrirModalEditarHorno(horno);
      });
    });
  }

  function abrirModalNuevoHorno() {
    hornoEditando = null;
    hornoForm?.reset();
    if (hornoModalTitle) hornoModalTitle.textContent = 'A침adir Horno';
    btnEliminarHorno?.classList.remove('show');
    if (hornoModal) hornoModal.style.display = 'block';
  }

  function abrirModalEditarHorno(horno: any) {
    hornoEditando = horno;
    if (nombreHornoInput) nombreHornoInput.value = horno.nombre;
    if (temperaturaInput) temperaturaInput.value = horno.temperatura;
    if (velocidadInput) velocidadInput.value = horno.velocidad;
    if (hornoModalTitle) hornoModalTitle.textContent = 'Editar Horno';
    btnEliminarHorno?.classList.add('show');
    if (hornoModal) hornoModal.style.display = 'block';
  }

  function cerrarModal() {
    if (hornoModal) hornoModal.style.display = 'none';
    hornoEditando = null;
    hornoForm?.reset();
  }

  async function guardarHorno(e: Event) {
    e.preventDefault();

    const hornoData = {
      nombre: nombreHornoInput?.value,
      temperatura: parseFloat(temperaturaInput?.value || '0'),
      velocidad: parseFloat(velocidadInput?.value || '0'),
    };

    try {
      let response;
      if (hornoEditando) {
        // Actualizar horno existente
        response = await fetch(`/api/hornos/${hornoEditando._id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(hornoData),
        });
      } else {
        // Crear nuevo horno
        response = await fetch('/api/hornos', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(hornoData),
        });
      }

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Error al guardar el horno');
      }

      await cargarHornos();
      cerrarModal();
      alert(hornoEditando ? 'Horno actualizado correctamente' : 'Horno creado correctamente');
    } catch (error: any) {
      console.error('Error:', error);
      alert(error.message || 'Error al guardar el horno');
    }
  }

  async function eliminarHorno() {
    if (!hornoEditando) return;

    if (!confirm(`쮼st치s seguro de que quieres eliminar el horno "${hornoEditando.nombre}"?`)) {
      return;
    }

    try {
      const response = await fetch(`/api/hornos/${hornoEditando._id}`, {
        method: 'DELETE',
      });

      if (!response.ok) {
        throw new Error('Error al eliminar el horno');
      }

      await cargarHornos();
      cerrarModal();
      alert('Horno eliminado correctamente');
    } catch (error) {
      console.error('Error:', error);
      alert('Error al eliminar el horno');
    }
  }
</script>
